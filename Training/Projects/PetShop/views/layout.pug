doctype html
html
  head
    title PokemonPetShop | Home
    meta(charset='utf-8')
    meta(name="viewport", content="width=device-width, initial-scale=1")
    link(rel="icon" href="/images/pokeball-logo.png")

    link(rel='stylesheet', href='/bootstrap/css/bootstrap.min.css')
    link(rel='stylesheet', href='/css/style.css')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js')
    script(src='/bootstrap/js/bootstrap.min.js')
    script(src='/js/script.js')

  body
    ul(class="nav nav-tabs navbar" style="background-color: #333333;")
      li.nav-item
        a.nav-link(href="/") Home

      if username != ""
        li.nav-item
          a.nav-link(href="/user/"+username) My Account

        li.nav-item
          a.nav-link(href="/disconnect") Disconnect

      li(class="nav-item" style="float:right; margin-right: 15px;")
        form(style="margin-top:5px; margin-left:10px" class="form-inline" action="/search" method="POST")
          input(class="form-control mr-sm-2" style="font-size: 14px; width: 150px" name="search" placeholder="Search a pokemon" aria-label="Search a pokemon")
          input(class="btn btn-success" type="submit" name="submit" value="Search")
    block content
